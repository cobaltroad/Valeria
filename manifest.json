{
  "name": "Valeria's Battle Trainer",
  "version": "0.1",
  "description": "Hijack Ilmina's library for training purposes.",
  "manifest_version": 2,
  "permissions": ["activeTab", "tabs", "<all_urls>"],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "*://ilmina.com/*"
      ],
      "run_at": "document_idle",
      "css": ["css/valeria.css"],
      "js": [
        "injector.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "require.min.js",
    "bundle.js",
    "assets/UIPAT1.PNG",
    "assets/DungeonsAndEncounters.json"
  ]
}
